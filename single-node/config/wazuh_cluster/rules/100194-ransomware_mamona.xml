<group name="mamona,ransomware,">
  <!-- Ransom note creation -->
  <rule id="100194" level="15" timeframe="100" frequency="2">
    <if_sid>61613</if_sid>
    <field name="win.eventdata.targetFilename" type="pcre2">(?i)README\d*\.HAes\.txt</field>
    <description>Possible Mamona ransomware detected: Mamona ransom note 'README.HAes.txt' detected in $(win.eventdata.targetFilename).</description>
    <mitre>
      <id>T1486</id>
    </mitre>
  </rule>

  <!-- Detect multiple ransom note creation + ping delay and self-deletion command-->
  <rule id="100195" level="15" frequency="2" timeframe="300">
    <if_matched_sid>100194</if_matched_sid>
    <if_sid>61603</if_sid>
    <field name="win.eventdata.commandLine" type="pcre2">(?i)ping</field>
    <field name="win.eventdata.commandLine" type="pcre2">127\.0\.0\.7</field>
    <field name="win.eventdata.commandLine" type="pcre2">Del</field>
    <description>Mamona ransomware activity confirmed. Multiple ransom notes dropped and suspicious command detected (Ping delay + self deletion): $(win.eventdata.commandLine)</description>
    <mitre>
      <id>T1490</id>
      <id>T1059.003</id>
    </mitre>
  </rule>
</group>